<div class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="carfare-t">
        <table class="table table-bordered table-condensed">
          <thead>
            <tr>
              <th colspan="3">投稿一覧</th>
            </tr>
          </thead>
          <thead  class="table table-bordered table-condensed">
            <% @articles.each do |article| %>
              <tr>
                <td><%= link_to "#{article.title}", users_article_path(article) %></td>
                <td><%= button_to '編集',edit_users_article_path(article), method: :get, class: "btn btn-sm btn-success" %></td>
                <td><%= button_to '削除',users_article_path(article), method: :delete, class: "btn btn-sm btn-danger" %></td>
              </tr>
            <% end %>
          </thead>
        </table>
      </div>
    </div>
  </div><!-- /.container-fluid -->
</div>
